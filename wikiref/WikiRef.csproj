<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <AssemblyName>wikiref</AssemblyName>
    <ApplicationIcon>icon_full.ico</ApplicationIcon>
    <PackageIcon>icon.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="GenerateRef\**" />
    <EmbeddedResource Remove="GenerateRef\**" />
    <None Remove="GenerateRef\**" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="icon_full.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\doc\icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.9.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\WikiRef.Commons\WikiRef.Commons.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="whitelist.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
